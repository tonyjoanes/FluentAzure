<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Official NuGet.org source -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />

    <!-- GitHub Packages (optional for pre-releases) -->
    <add key="github" value="https://nuget.pkg.github.com/tonyjoanes/index.json" />
  </packageSources>

  <packageSourceCredentials>
    <!-- GitHub Packages authentication (set via environment variables) -->
    <github>
      <add key="Username" value="%GITHUB_USERNAME%" />
      <add key="ClearTextPassword" value="%GITHUB_TOKEN%" />
    </github>
  </packageSourceCredentials>

  <!-- Package validation -->
  <packageValidation>
    <enabled>true</enabled>
  </packageValidation>
</configuration>
